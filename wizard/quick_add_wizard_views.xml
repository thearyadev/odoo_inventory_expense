<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="quick_add_wizard_view_form" model="ir.ui.view">
        <field name="name">quick.add.wizard.form</field>
        <field name="model">quick.add.wizard</field>
        <field name="arch" type="xml">
            <form string="Quick Add Expense">
                <sheet>
                    <group>
                        <field name="receipt_file" widget="image" filename="receipt_filename"
                               string="Receipt Image"
                               help="Upload a receipt image (JPG, PNG, GIF, WebP) or PDF"
                               options='{"accepted_file_extensions": ".jpg,.jpeg,.png,.gif,.webp,.pdf"}'/>
                        <field name="receipt_filename" invisible="1"/>
                    </group>
                </sheet>
                <footer>
                    <button name="action_quick_add" type="object" string="Quick Add" class="btn-primary"/>
                    <button name="action_quick_add_ai" type="object" string="Quick Add with AI" class="btn-secondary"/>
                    <button special="cancel" string="Cancel" class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="quick_add_wizard_action" model="ir.actions.act_window">
        <field name="name">Quick Add Expense</field>
        <field name="res_model">quick.add.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="context">{}</field>
    </record>
</odoo>
