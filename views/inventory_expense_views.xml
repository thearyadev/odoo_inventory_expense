<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Form View -->
    <record id="inventory_expense_view_form" model="ir.ui.view">
        <field name="name">inventory.expense.form</field>
        <field name="model">inventory.expense</field>
        <field name="arch" type="xml">
            <form string="Inventory Expense">
                <header>
                </header>
                <sheet>
                    <div class="alert alert-warning" role="alert" invisible="is_zero_value == False">
                        <strong>Warning:</strong> This expense has a zero total amount. Please verify if this is intentional.
                    </div>
                    <div class="alert alert-info" role="alert" invisible="needs_review == False">
                        <strong>Review Required:</strong> This expense was created via AI extraction. Please verify the extracted values are correct, then uncheck "Needs Review".
                    </div>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="e.g., Costco Business - Office Supplies"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="date"/>
                            <field name="total_without_tax" widget="monetary" string="Subtotal"/>
                            <field name="total_with_tax" widget="monetary" string="Total Paid"/>
                            <field name="tax_amount" widget="monetary" readonly="1"/>
                            <field name="total_amount" invisible="1"/>
                        </group>
                        <group>
                            <field name="company_id" groups="base.group_multi_company"/>
                            <field name="currency_id" invisible="1"/>
                            <field name="user_id" readonly="1"/>
                            <field name="needs_review"/>
                        </group>
                    </group>
                    <group string="Receipt">
                        <field name="receipt_filename" invisible="1"/>
                        <div class="w-100">
                            <field name="receipt_image" widget="image" class="w-100 o_wmx_max"
                                   filename="receipt_filename"
                                   placeholder="Upload receipt image"
                                   options='{"size": [0, 0], "preview_image": "receipt_image"}'/>
                        </div>
                    </group>
                    <group string="Notes">
                        <field name="notes" nolabel="1" placeholder="Additional details about this expense..."/>
                    </group>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </sheet>
            </form>
        </field>
    </record>

    <!-- List View -->
    <record id="inventory_expense_view_tree" model="ir.ui.view">
        <field name="name">inventory.expense.tree</field>
        <field name="model">inventory.expense</field>
        <field name="arch" type="xml">
            <list string="Inventory Expenses" decoration-warning="is_zero_value" decoration-info="needs_review">
                <header>
                    <button name="%(quick_add_wizard_action)d" type="action" string="Quick Add" class="btn-primary" display="always"/>
                    <button name="%(quick_add_wizard_action)d" type="action" string="Quick Add with AI" class="btn-secondary" display="always"/>
                </header>
                <field name="is_zero_value" column_invisible="True"/>
                <field name="needs_review" column_invisible="True"/>
                <field name="date"/>
                <field name="name"/>
                <field name="total_without_tax" sum="Subtotal" widget="monetary" optional="show"/>
                <field name="total_with_tax" sum="Total Paid" widget="monetary"/>
                <field name="tax_amount" sum="Tax Paid" widget="monetary" optional="show"/>
                <field name="user_id" optional="show"/>
                <field name="company_id" groups="base.group_multi_company" optional="hide"/>
                <field name="currency_id" invisible="1"/>
                <field name="total_amount" invisible="1"/>
            </list>
        </field>
    </record>

    <!-- Search View -->
    <record id="inventory_expense_view_search" model="ir.ui.view">
        <field name="name">inventory.expense.search</field>
        <field name="model">inventory.expense</field>
        <field name="arch" type="xml">
            <search string="Search Expenses">
                <field name="name" string="Expense Name"/>
                <field name="date"/>
                <field name="user_id"/>
                <filter string="This Month" name="this_month"
                        domain="[('date', '&gt;=', context_today().strftime('%Y-%m-01'))]"/>
                <filter string="This Quarter" name="this_quarter"
                        domain="[('date', '&gt;=', (context_today() + relativedelta(day=1, months=-((context_today().month - 1) % 3))).strftime('%Y-%m-%d'))]"/>
                <filter string="This Year" name="this_year"
                        domain="[('date', '&gt;=', context_today().strftime('%Y-01-01'))]"/>
                <separator/>
                <filter string="Today" name="today"
                        domain="[('date', '=', context_today())]"/>
                <filter string="Yesterday" name="yesterday"
                        domain="[('date', '=', (context_today() - relativedelta(days=1)).strftime('%Y-%m-%d'))]"/>
                <separator/>
                <filter string="Zero Value" name="zero_value"
                        domain="[('is_zero_value', '=', True)]"
                        help="Show expenses with zero total amount"/>
                <filter string="Non-Zero Value" name="non_zero_value"
                        domain="[('is_zero_value', '=', False)]"
                        help="Show expenses with non-zero total amount"/>
                <separator/>
                <filter string="Needs Review" name="needs_review"
                        domain="[('needs_review', '=', True)]"
                        help="Show expenses that need verification"/>
                <filter string="Reviewed" name="reviewed"
                        domain="[('needs_review', '=', False)]"
                        help="Show expenses that have been verified"/>
                <separator/>
                <group expand="0" string="Group By">
                    <filter string="Date" name="group_date" context="{'group_by': 'date'}"/>
                    <filter string="Month" name="group_month" context="{'group_by': 'date:month'}"/>
                    <filter string="Quarter" name="group_quarter" context="{'group_by': 'date:quarter'}"/>
                    <filter string="Year" name="group_year" context="{'group_by': 'date:year'}"/>
                    <filter string="Created By" name="group_user" context="{'group_by': 'user_id'}"/>
                    <filter string="Zero Value" name="group_zero_value" context="{'group_by': 'is_zero_value'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Pivot View -->
    <record id="inventory_expense_view_pivot" model="ir.ui.view">
        <field name="name">inventory.expense.pivot</field>
        <field name="model">inventory.expense</field>
        <field name="arch" type="xml">
            <pivot string="Expense Analysis" sample="1">
                <field name="date" interval="month" type="row"/>
                <field name="total_with_tax" type="measure"/>
                <field name="tax_amount" type="measure"/>
                <field name="total_without_tax" type="measure"/>
            </pivot>
        </field>
    </record>

    <!-- Graph View -->
    <record id="inventory_expense_view_graph" model="ir.ui.view">
        <field name="name">inventory.expense.graph</field>
        <field name="model">inventory.expense</field>
        <field name="arch" type="xml">
            <graph string="Expense Trends" sample="1">
                <field name="date" interval="month"/>
                <field name="total_with_tax" type="measure"/>
            </graph>
        </field>
    </record>

    <!-- Action: All Expenses -->
    <record id="inventory_expense_action" model="ir.actions.act_window">
        <field name="name">Inventory Expenses</field>
        <field name="res_model">inventory.expense</field>
        <field name="view_mode">list,form,pivot,graph</field>
        <field name="search_view_id" ref="inventory_expense_view_search"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No expenses recorded yet.
            </p>
            <p>
                Click "New" to log your first inventory expense.
            </p>
        </field>
    </record>

    <!-- Action: Report Wizard -->
    <record id="expense_report_wizard_action" model="ir.actions.act_window">
        <field name="name">Generate Expense Report</field>
        <field name="res_model">expense.report.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <!-- Main Menu -->
    <menuitem id="menu_inventory_expense_root"
              name="Inventory Expenses"
              sequence="40"
              web_icon="inventory_expense,static/description/icon.png"/>

    <!-- Submenus -->
    <menuitem id="menu_inventory_expense_expenses"
              name="Expenses"
              parent="menu_inventory_expense_root"
              sequence="1"
              action="inventory_expense_action"/>

    <menuitem id="menu_inventory_expense_reports"
              name="Reports"
              parent="menu_inventory_expense_root"
              sequence="10"/>

    <menuitem id="menu_inventory_expense_report_wizard"
              name="Generate Report"
              parent="menu_inventory_expense_reports"
              sequence="1"
              action="expense_report_wizard_action"/>

    <menuitem id="menu_inventory_expense_analysis"
              name="Analysis"
              parent="menu_inventory_expense_reports"
              sequence="5"
              action="inventory_expense_action"/>
</odoo>
